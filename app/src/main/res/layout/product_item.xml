<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Category "
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/proname1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/proname1"
        android:scaleType="centerCrop"
android:src="@drawable/profile"

        android:layout_marginTop="2dp"
        android:id="@+id/proimg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Price "
        android:textAlignment="center"
        android:textSize="18dp"
        android:id="@+id/proprice1"
        android:layout_below="@+id/proimg"

        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Description "
        android:textAlignment="center"
        android:textSize="16dp"
        android:id="@+id/prodesc"
        android:layout_below="@+id/proprice1"
        android:layout_marginTop="2dp"


        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product type "
        android:textAlignment="center"
        android:textSize="16dp"
        android:id="@+id/protype"
        android:layout_below="@+id/prodesc"
        android:layout_marginTop="2dp"


        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Owner "
        android:textAlignment="center"
        android:textSize="16dp"
        android:id="@+id/proowner"
        android:layout_below="@+id/protype"
        android:layout_marginTop="2dp"


        android:textColor="@color/colorPrimary"
        />
</RelativeLayout>
</android.support.v7.widget.CardView>