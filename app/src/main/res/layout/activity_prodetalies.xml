<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdetaliesActivity">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/proimg"

        android:layout_height="250dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proimg"
        android:text="Product Name "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/prodname1111"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prodname1111"
        android:text="Product Description "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/prodsec11"

        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prodsec11"
        android:text="Product Price "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/proprice11"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="type"
        android:id="@+id/btnnum"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/proprice11"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="owner"
        android:id="@+id/proDowner"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnnum"
        android:layout_marginTop="10dp"

        />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorPrimaryDark"
    android:layout_margin="15dp"
    android:layout_alignParentBottom="true"
    android:text="add to cart"
    android:textStyle="bold"
    android:textSize="15sp"
    android:id="@+id/addtocart"
    android:textColor="@android:color/white"
    />


</RelativeLayout>